<!DOCTYPE html>
<html>
<head>
  <title>Usuários</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <div class="page-wrapper fade-in">
    <%- include('../components/header') %>
    
    <div class="container">
      <div class="page-header">
        <h1><i class="fas fa-users"></i> Usuários</h1>
        <div class="breadcrumb">
          <a href="/"><i class="fas fa-home"></i> Início</a>
          <span class="separator">></span>
          <span class="current">Usuários</span>
        </div>
      </div>

      <div class="page-actions">
        <a href="/usuarios/registro" class="btn btn-primary">
          <i class="fas fa-user-plus"></i> Novo Usuário
        </a>
      </div>

      <% if (typeof usuarios !== 'undefined' && usuarios.length > 0) { %>
        <div class="users-grid">
          <% usuarios.forEach(usuario => { %>
            <div class="user-card">
              <div class="user-avatar">
                <i class="fas fa-user-circle"></i>
              </div>
              <div class="user-info">
                <h3><%= usuario.nome_usuario %></h3>
                <p class="user-email"><i class="fas fa-envelope"></i> <%= usuario.email %></p>
                <p class="user-date"><i class="fas fa-calendar"></i> Criado em: <%= new Date(usuario.criado_em).toLocaleDateString('pt-BR') %></p>
              </div>
              <div class="user-actions">
                <a href="/usuarios/perfil/<%= usuario.id %>" class="btn btn-primary btn-sm">
                  <i class="fas fa-eye"></i> Ver Perfil
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="empty-state">
          <i class="fas fa-users"></i>
          <h3>Nenhum usuário encontrado</h3>
          <p>Cadastre o primeiro usuário do sistema.</p>
          <a href="/usuarios/registro" class="btn btn-primary">
            <i class="fas fa-user-plus"></i> Novo Usuário
          </a>
        </div>
      <% } %>
    </div>
  </div>

  <script src="/js/script.js"></script>
</body>
</html>
