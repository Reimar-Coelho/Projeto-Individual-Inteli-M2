<!DOCTYPE html>
<html>
<head>
  <title>Login - Sistema de Tarefas</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <div class="page-wrapper">
    <div class="container fade-in">
      <div class="nav">
        <a href="/"><i class="fas fa-home"></i> PÃ¡gina Inicial</a>
        <a href="/usuarios/registro"><i class="fas fa-user-plus"></i> Registro</a>
      </div>

      <div style="text-align: center; margin-bottom: 30px;">
        <i class="fas fa-sign-in-alt" style="font-size: 48px; color: #667eea; margin-bottom: 15px;"></i>
        <h1>Fazer Login</h1>
        <p style="color: #6c757d;">Acesse sua conta para gerenciar suas tarefas</p>
      </div>
      
      <% if (typeof error !== 'undefined') { %>
        <div class="error">
          <i class="fas fa-exclamation-triangle" style="margin-right: 8px;"></i><%= error %>
        </div>
      <% } %>
      
      <form method="post" action="/usuarios/login">
        <div class="form-group">
          <label for="email"><i class="fas fa-envelope" style="margin-right: 8px;"></i>Email:</label>
          <input type="email" id="email" name="email" required value="<%= typeof email !== 'undefined' ? email : '' %>">
        </div>
        
        <div class="form-group">
          <label for="senha"><i class="fas fa-lock" style="margin-right: 8px;"></i>Senha:</label>
          <input type="password" id="senha" name="senha" required>
        </div>
        
        <button type="submit">
          <i class="fas fa-sign-in-alt" style="margin-right: 8px;"></i>Entrar
        </button>
      </form>
    </div>
  </div>
</body>
</html>
